{
  "name": "craft-blog",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "is-ci || (husky install && git config commit.template commit-template.txt)",
    "lint": "eslint .",
    "lint:css": "stylelint '**/*.styled.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier --write .",
    "blog:dev": "yarn workspace nextjs-craft-blog-kit run dev",
    "blog:start": "yarn workspace nextjs-craft-blog-kit run start",
    "blog:build": "yarn workspace nextjs-craft-blog-kit run build",
    "blog:export": "yarn workspace nextjs-craft-blog-kit run export"
  },
  "packageManager": "yarn@3.2.0",
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@craftdocs/craft-extension-api": "^0.0.4",
    "@craftdocs/craft-extension-api-sdk": "^0.0.4",
    "@storybook/addon-a11y": "^6.5.0-alpha.63",
    "@storybook/addon-actions": "^6.5.0-alpha.63",
    "@storybook/addon-essentials": "^6.5.0-alpha.63",
    "@storybook/addon-interactions": "^6.5.0-alpha.63",
    "@storybook/addon-links": "^6.5.0-alpha.63",
    "@storybook/builder-webpack5": "^6.5.0-alpha.63",
    "@storybook/manager-webpack5": "^6.5.0-alpha.63",
    "@storybook/react": "^6.5.0-alpha.63",
    "@storybook/testing-library": "^0.0.10--canary.9d5661e.0",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/styled-components": "^5.1.25",
    "conventional-commits-parser": "^3.2.4",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-storybook": "^0.5.9--canary.acfda00.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.3.8",
    "next": "^12.1.5",
    "prettier": "^2.6.2",
    "react": "^18.0.0",
    "react-dev-utils": "^12.0.1",
    "react-dom": "^18.0.0",
    "storybook-addon-swc": "^1.1.7",
    "style-loader": "^3.3.1",
    "styled-components": "^5.3.5",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.8.1",
    "zip-webpack-plugin": "^4.0.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.styled.{js,jsx,ts,tsx}": "stylelint",
    "*.{js,jsx,ts,tsx,css,sass,less,md,mdx}": "prettier --write"
  }
}
